<% include ../partials/header %>
<% console.log("11111111111111111111666666666666666666666666666666"); %>

<div class="container">
<h1>New Dish</h1>

<form action="/menu/<%= item._id %>?_method=PUT" method="POST">

<h5>Title</h5>
<div class="form-group">
<input type="text" name="title" class="form-control" value="<%= item.title %>">
</div>

<h5>Image</h5>
<div class="form-group">
<input type="text" name="image" class="form-control" value="<%= item.image %>">
</div>

<h5>Description</h5>
<div class="form-group">
<textarea name="description" class="form-control"><%= item.description %></textarea>
</div>

<h5>Price</h5>
<div class="form-group">
<input type="text" name="price" class="form-control" value="<%= item.price %>">
</div>

<h5>Category</h5>
<div class="form-group">
<input type="text" name="category" class="form-control" value="<%= item.category %>">
</div>

<div class="form-group">
<button type="Submit" class="btn btn-info">Save</button>
</div>

</form>

<a href="/menu">Cancel</a>


</div>
<% include ../partials/footer %>
