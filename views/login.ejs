<% include partials/header %>
<div class="container">
    <div class="row h-100 align-items-center">
        <div class="col-4"></div>
        <div class="col-4">
            <h2>Log In</h2>
            <form action="/login" method=POST>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" aria-describedby="unameHelp"
                        placeholder="Enter username" pattern="[a-zA-Z0-9_]+" required>
                    <small id="unameHelp" class="form-text text-muted">This is the username that you
                        used to register with us.</small>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password"
                        placeholder="Enter password" minlength="8"
                        pattern="(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\S+$).{8,}" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <p>Not registered yet? Click <a href="/register">here</a>.</p>
        </div>
        <div class="col-4"></div>
    </div>
</div>
<% include partials/footer %>