<% include partials/header %>

<div class="container">
    <div class="row h-100 align-items-center">

        <div class="col-12">
            <table class="table table-striped table-dark order-history-table">
                <thead>
                    <tr>
                        <th scope="col">Order no.</th>
                        <th scope="col">Items</th>
                        <th scope="col">Order total</th>
                        <th scope="col">Date</th>


                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(function(order){ %>
                    <tr>
                        <th scope="row"><%= order._id %></th>
                        <td>
                            <% order.items.forEach(function(item){ %>
                            <p class="item-name"><%= item.name  %></p>
                            <% if (item.crust != "NA") { %>
                            <p class="item-crust"><%= item.crust  %></p>
                            <% } %>
                            <p class="item-toppings">
                                <% item.toppings.forEach(function(topping){ %>
                                <%= topping %> |
                                <% }); %>
                            </p>
                            <% if (item.size == "NA") { %>
                            <p class="item-details">Quantity: <%= item.quantity %> | Price:
                                $<%= item.totalprice %>
                            </p>
                            <% } else { %>
                            <p class="item-details">Size: <%= item.size %> | Quantity: <%= item.quantity %> | Price:
                                $<%= item.totalprice %>
                            </p>
                            <% } %>

                            <% }); %>
                        </td>
                        <td> $<%= order.finalPrice %> </td>
                        <td> <%= order.dateandtime %> </td>

                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

    </div>
</div>

<% include partials/footer %>